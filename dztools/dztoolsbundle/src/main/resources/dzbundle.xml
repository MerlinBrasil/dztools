<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>dzbundle</id>
	<formats>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>

	<moduleSets>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>com.jforex:dzplugin</include>
			</includes>
			<sources>
				<includeModuleDirectory>false</includeModuleDirectory>
				<fileSets>
					<fileSet>
						<directory>target/nar/dzplugin-0.9.0-x86-Windows-gpp-shared/lib/x86-Windows-gpp/shared</directory>
						<outputDirectory>/</outputDirectory>
						<includes>
							<include>dukascopy-${project.version}.dll</include>
						</includes>
					</fileSet>
					<fileSet>
						<directory>target</directory>
						<outputDirectory>dztools/dzplugin</outputDirectory>
						<includes>
							<include>dzplugin-${project.version}.jar</include>
						</includes>
					</fileSet>
				</fileSets>
			</sources>
		</moduleSet>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>com.jforex:dzconverter</include>
			</includes>
			<sources>
				<includeModuleDirectory>false</includeModuleDirectory>
				<fileSets>
					<fileSet>
						<directory>target</directory>
						<outputDirectory>dztools/dzconverter</outputDirectory>
						<includes>
							<include>dzconverter-${project.version}.jar</include>
						</includes>
					</fileSet>
					<fileSet>
						<directory>target/classes</directory>
						<outputDirectory>dztools/dzconverter</outputDirectory>
						<includes>
							<include>convert.bat</include>
						</includes>
					</fileSet>
					<fileSet>
						<directory>src/main/resources</directory>
						<outputDirectory>dztools/dzconverter</outputDirectory>
						<includes>
							<include>config.properties</include>
						</includes>
					</fileSet>
					<fileSet>
						<directory>src/main/resources</directory>
						<outputDirectory>dztools/dzconverter/bars</outputDirectory>
						<excludes>
							<exclude>*</exclude>
						</excludes>
					</fileSet>
				</fileSets>
			</sources>
		</moduleSet>
	</moduleSets>

	<dependencySets>
		<dependencySet>
			<outputDirectory>dztools/lib</outputDirectory>
			<excludes>
				<exclude>com.jforex:dzplugin</exclude>
				<exclude>com.jforex:dzconverter</exclude>
				<exclude>com.jforex:dztoolsbundle</exclude>
			</excludes>
		</dependencySet>
	</dependencySets>
</assembly>